        if (dto.id() != null) {
            {{biz}} = {{biz}}Repository.findById(dto.id()).orElse(null);
        }
        {{biz}}Mapper.partialUpdate(dto, {{biz}});
        assert {{biz}} != null;
        return {{biz}}Mapper.to{{Biz}}DTO({{biz}}Repository.save({{biz}}));
    }

    /**
     * 通过ID删除{{comment}}
     *
     * @param id ID
     * @return boolean
