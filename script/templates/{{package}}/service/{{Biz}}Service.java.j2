    private JPAQuery<{{Biz}}> buildQuery({{Biz}}DTO dto) {
        Q{{Biz}} q{{biz}} = Q{{Biz}}.{{biz}};
        JPAQuery<{{Biz}}> query = jpaQueryFactory.selectFrom(q{{biz}});
        query.where(new Predicate[]{
                dto.id() != null ? q{{biz}}.id.eq(dto.id()) : null,
        });
